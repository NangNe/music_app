<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad8"
    tools:context=".HomeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RPlayer"
        android:id="@+id/head"
        android:textStyle="bold"
        android:textSize="60sp"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/iconn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/icon"
        android:layout_below="@+id/head"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/home_register_button"
        android:layout_below="@+id/iconn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NEW USER ? REGISTER WITH US"
        android:padding="20dp"
        android:layout_marginTop="80dp"
        android:textColor="@android:color/white"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:background="@drawable/input_design"
        android:layout_marginRight="20dp"/>
    <Button
        android:id="@+id/home_login_button"
        android:layout_below="@+id/home_register_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login Now"
        android:background="@drawable/input_design"
        android:textColor="@android:color/white"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>


</RelativeLayout>








